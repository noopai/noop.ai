---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import {
	CodepenLogo,
	BracketsCurly,
	Code,
	GithubLogo,
	TwitterLogo,
	Envelope,
	At,
	File,
} from "phosphor-react";
---

<Layout title="noop.ai">
	<main class="flex flex-col justify-center items-center gap-2 h-[100vh]">
		<div class="noop-gradient py-2">
			<h1 class="text-8xl font-bold">noop.ai</h1>
		</div>
		<a
			href="mailto:info@noop.ai"
			class="flex justify-center items-center px-4 py-2 bg-nord4 dark:bg-nord1 font-bold text-lg rounded-full"
		>
			Contact Us
		</a>
	</main>
</Layout>

<style>
	.noop-gradient {
		background-image: linear-gradient(
			90deg,
			#5e81ac,
			#81a1c1,
			#88c0d0,
			#8fbcbb,
			#a3be8c,
			#b48ead,
			#ebcb8b,
			#d08770,
			#bf616a
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
